<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medikeen.patient.ForgotPasswordActivity" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg"
        android:tint="#80000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/framlayout_margin_left"
        android:layout_marginRight="@dimen/framelayou_margin_right"
        android:layout_marginTop="@dimen/text_view_margin_top"
        android:orientation="vertical" >

        <com.medikeen.views.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="OTP Verfication"
            android:textColor="#eeeeee"
            android:textSize="@dimen/text_Size1" />

        <com.medikeen.views.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_view_margin_left"
            android:layout_marginTop="@dimen/text_view_margin_top"
            android:text="Email"
            android:textSize="@dimen/text_Size1"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.medikeen.views.MyEditText
                android:id="@+id/editTextotp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edittext_margin_left"
                android:layout_marginRight="@dimen/edittext_margin_right"
                android:layout_marginTop="@dimen/edittext_margin_top"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:hint="Enter OTP"
                android:inputType="phone"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textColor="@android:color/white"
                android:textColorHint="#eeeeee" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/editTextotp"
                android:layout_marginLeft="@dimen/edittext_margin_left"
                android:layout_marginRight="@dimen/edittext_margin_right"
                android:background="#ffffff" />
        </RelativeLayout>

        <com.medikeen.views.MyButton
            android:id="@+id/buttonOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/button_margin_top"
            android:layout_marginLeft="@dimen/edittext_margin_left"
            android:layout_marginRight="@dimen/edittext_margin_right"
            android:layout_marginTop="30dp"
            android:background="#1E88E5"
            android:gravity="center"
            android:text="Verify OTP"
            android:textColor="#fff" />
    </LinearLayout>

</FrameLayout>